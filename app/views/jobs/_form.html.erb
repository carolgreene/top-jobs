<h3>Jobs Form</h3>

<%= form_for @job do |f| %>
    <%= f.label :Title %><br>
    <%= f.text_field :title %><br>

    <%= f.label :Location %><br>
    <%= f.text_field :location %><br>

    <%= f.label :Category %><br>
    <%= f.text_field :category %><br>

    <%= f.label :Company %><br>
    <%= f.text_field :company %><br>

    <%= f.label :Salary %><br> 
    <%= f.text_field :salary %><br>

    <%= f.label :Description %><br>
    <%= f.text_area :description %><br>

    <%= f.submit %>
    <% end %>
