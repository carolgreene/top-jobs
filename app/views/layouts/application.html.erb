<!DOCTYPE html>
<html>
  <head>
    <title>TopJobs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>

    <% if !flash.empty? %>
    <div id="flash"> 
        <% flash.keys.each do |k| %> 
            <div class="<%= k %>">
                <%= flash[k] %>
            </div>  
        <% end %>   
    </div>
<% end %>



  </head>

  <body>

  <%= link_to "All Jobs", jobs_path, id: 'all-jobs-link', class: 'all_jobs' %> |
  <%= link_to "Sign In", signin_path, id: 'sign-in-link', class: 'sign_in' %> |
  <%= link_to "Sign Up", new_user_path, id: 'sign-up-link', class: 'sign_up' %> |
  <%= link_to "Log Out", signout_path, id: 'sign-out-link', class: 'sign_out' %> 
  

  <div id="app-container">
  
  
    <%= yield %>
    </div>
  </body>
</html>
